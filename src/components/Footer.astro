---
import Social from './Social.astro';
const social = [
    {platform: 'twitter', username: 'astrodotbuild', icon: 'bi-twitter'},
    {platform: 'github', username: 'Yasta-Code/yastacode.github.io', icon: 'bi-github'},
    {platform: 'youtube', username: 'channel/UCL900HTbza9nTCsRZl2GHjg', icon: 'bi-youtube'},
]
---

<footer class="footer">
    {social.map((item) => 
        <Social platform={item.platform} username={item.username} icon={item.icon}/>
        )}
