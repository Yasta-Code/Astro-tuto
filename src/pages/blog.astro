---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

import '../styles/global.css';
const pageTitle = "Mon blog d’apprentissage Astro";
---

<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
	</head>
	<body>
		<div class="container">
			<div class="row">
				<nav class="navigation">
                    <Navigation />
                </nav>
				<header class="header">
                    <h1>{pageTitle}</h1>
                </header>
				<main class="main">
					<section class="section">
						<div class="section-header">
                            <p>Voici où je vais publier mon parcours d'apprentissage d'Astro.</p>
						</div>
                        <div class="section-body">
                            <ul>
                                <li><a href="/posts/post-1/">Article 1</a></li>
                                <li><a href="/posts/post-2/">Article 2</a></li>
                                <li><a href="/posts/post-3/">Article 3</a></li>
                            </ul>
                        </div>
					</section>
				</main>
				<Footer />
			</div>
		</div>
	</body>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</html>
